<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relative">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageView_icon"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/send_button_set"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="林科大"
        android:id="@+id/textView_name"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:textSize="20sp"
        android:layout_alignTop="@+id/imageView_icon"
        android:layout_toRightOf="@+id/imageView_icon"
        android:layout_toEndOf="@+id/imageView_icon"
        android:textColor="@android:color/holo_blue_bright"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="百事汇通"
        android:id="@+id/textView_type"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/textView_name"
        android:layout_alignLeft="@+id/textView_name"
        android:layout_alignStart="@+id/textView_name"
        android:textSize="12sp"
        android:layout_alignRight="@+id/textView_name"
        android:layout_alignEnd="@+id/textView_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="收派范围："
        android:id="@+id/textView6"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/textView_type"
        android:layout_alignLeft="@+id/textView_type"
        android:layout_alignStart="@+id/textView_type"
        android:textSize="12sp"
        android:layout_alignRight="@+id/textView_name"
        android:layout_alignEnd="@+id/textView_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="中南林业科技大学—林学院"
        android:id="@+id/textView_round"
        android:layout_alignBottom="@+id/textView6"
        android:layout_toRightOf="@+id/textView6"
        android:layout_toEndOf="@+id/textView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView_price"
        android:layout_alignBottom="@+id/textView_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:visibility="invisible"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView_time"
        android:layout_below="@+id/textView_price"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:visibility="invisible"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="价格："
        android:id="@+id/textViewp"
        android:layout_above="@+id/textView_time"
        android:layout_toLeftOf="@+id/textView_price"
        android:layout_toStartOf="@+id/textView_price"
        android:visibility="invisible"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="时间："
        android:id="@+id/textViewt"
        android:layout_alignBottom="@+id/textView_time"
        android:layout_toLeftOf="@+id/textView_price"
        android:layout_toStartOf="@+id/textView_price"
        android:visibility="invisible"/>
</RelativeLayout>