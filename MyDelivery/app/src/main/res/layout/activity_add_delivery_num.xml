<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AddDeliveryNumActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_add_delivery_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />


    <Button
        android:id="@+id/button_save"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="left|center_vertical"
        android:text="添加后保存"
        android:layout_below="@+id/toolbar_add_delivery_num"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/imageView_save"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/button_save"
        android:layout_alignLeft="@+id/imageView_query"
        android:layout_alignStart="@+id/imageView_query"
        android:layout_marginBottom="20dp"
        android:src="@drawable/iconfont_jiantou"
        android:visibility="invisible" />

    <Button
        android:id="@+id/button_query"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button_save"
        android:gravity="left|center_vertical"
        android:text="添加后查询" />

    <ImageView
        android:id="@+id/imageView_query"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/button_query"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="17dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/iconfont_jiantou"
        android:visibility="invisible" />
</RelativeLayout>
