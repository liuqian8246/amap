<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.QueryDeliveryActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relativeLayout2"
        android:padding="8dp"
        android:layout_below="@+id/toolbar">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/barcode4"
            android:layout_alignTop="@+id/knum"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp" />

        <EditText
            android:id="@+id/knum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入快递单号"
            android:inputType="number"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="18sp"
            android:layout_marginTop="70dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageView" />

        <ImageView
            android:id="@+id/image_camera"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/iconfont_sheyinglvxing"
            android:layout_alignTop="@+id/imageView"
            android:layout_alignEnd="@+id/knum"
            android:onClick="SaoMiao"/>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/iconfont_wuliu"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/knum"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/textView_com"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请选择快递公司"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="18sp"
            android:layout_above="@+id/button"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/imageView3"
            android:layout_toEndOf="@+id/imageView3" />

        <ImageView
            android:id="@+id/image_more"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/textView_com"
            android:src="@drawable/iconfont_jiantou" />

        <Button
            android:id="@+id/button"
            style="@style/MyButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="33dp"
            android:text="查询"
            android:layout_below="@+id/textView10"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/imageView3"
            android:layout_toEndOf="@+id/imageView3"
            android:background="@android:color/darker_gray"
            android:text="" />

    </RelativeLayout>

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar_query"
        android:background="?attr/colorPrimary"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
