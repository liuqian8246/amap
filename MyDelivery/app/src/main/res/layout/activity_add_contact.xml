<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AddContactActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar_add_contact"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="?attr/colorPrimary"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/toolbar_add_contact"
        android:layout_alignStart="@+id/toolbar_add_contact"
        android:layout_alignBottom="@+id/toolbar_add_contact">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加快递员"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:id="@+id/textView14"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="通讯录导入"
        android:drawableLeft="@drawable/iconfont_contact"
        android:textSize="16sp"
        android:gravity="left|center"
        android:id="@+id/button_import_mail_list"
        android:layout_below="@+id/toolbar_add_contact"
        android:layout_alignStart="@+id/toolbar_add_contact"
        style="@style/Base.Widget.AppCompat.Button.Borderless" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:text=""
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@android:color/darker_gray"
        android:id="@+id/textView15"
        android:layout_below="@+id/button_import_mail_list"
        android:layout_alignStart="@+id/button_import_mail_list" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="通话记录导入"
        android:textSize="16sp"
        android:gravity="left|center"
        android:drawableLeft="@drawable/iconfont_callrecord"
        android:id="@+id/button_call_records_into"
        android:layout_below="@+id/textView15"
        android:layout_alignStart="@+id/button_import_mail_list"
        style="@style/Base.Widget.AppCompat.Button.Borderless" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:text=""
        android:background="@android:color/darker_gray"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:id="@+id/textView16"
        android:layout_below="@+id/button_call_records_into"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="手工录入"
        android:textSize="16sp"
        android:drawableLeft="@drawable/iconfont_byhand"
        android:gravity="left|center"
        android:id="@+id/button_byHand_into"
        android:layout_below="@+id/textView16"
        android:layout_alignStart="@+id/button_call_records_into"
        style="@style/Base.Widget.AppCompat.Button.Borderless" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:text=""
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@android:color/darker_gray"
        android:id="@+id/textView17"
        android:layout_below="@+id/button_byHand_into"
        android:layout_alignParentStart="true" />
</RelativeLayout>
